<h1>Adding a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, input_html: { class: 'form-control' } %>
  <%= f.input :address, input_html: { class: 'form-control' } %>
  <%= f.input :phone_number, input_html: { class: 'form-control' } %>
  <%= f.input :category, collection: %w(chinese italian japanese french belgian), input_html: { class: 'form-control' } %>
  <%= f.button :submit, class: 'btn btn-primary mt-4' %>
<% end %>
